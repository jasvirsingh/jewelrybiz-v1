@model IEnumerable<JewelryBiz.DataAccess.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/home.js" type="text/javascript"></script>
<div style="align-content:center; width:100%">
    <h2>Welcome</h2>
</div>
<div>

    <br />

    @if (ViewBag.Categories != null)
    {
        <div class="list-view">
            @foreach (var cat in Model)
            {
                <div>
                    <img src="~/Images/Products/@cat.CategoryImage" height="200px" width="200px" />
                    <br />
                    <span class="p-name">
                        <a href="@Url.Action("Index", "Products", new { cid = cat.CategoryId, category = cat.CategoryDescription })">@cat.CategoryDescription</a>
                    </span>
                </div>
            }
        </div>

    }

    @if (Model == null || Model.Count() == 0)
    {
        <br />
        <div id="EmptyDataMsg" class="alert alert-info">
            <strong>Welcome!</strong> currently no products available.
        </div>
    }
</div>

