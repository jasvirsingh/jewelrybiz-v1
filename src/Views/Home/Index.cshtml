        <div class="list-view">
            <span></span>
            @foreach (var item in ViewBag.Products)
            {
                if (item.UnitsInStock > 1)
                {
                    <div class="list-item">
                        @*<span class="p-cart">@item.Category</span>*@
                        <span>
                            @if (!string.IsNullOrWhiteSpace(item.Image))
                            {
                                <img src="~/Images/Products/@item.Image" height="100px" width="100px" />
                            }
                            else
                            {
                                <img src="~/Images/Products/noimagefound.png" height="100px" width="100px" />
                            }
                        </span>
                        <span class="p-name">
                            <a href="@Url.Action("ProductDetails", "Home", new { id = item.ProductId })">@item.PName</a>
                        </span>
                        @*<span class="p-description">@item.Description</span>*@
                        <div class="add-to-cart">
                            @*@Html.ActionLink("add to cart", "AddToCart", "Home", new { id = item.ProductId }, null)*@
                            <span class="p-price">@String.Format("{0:c}", item.UnitPrice)</span>
                        </div>
                        <span class="p-unit">
                            @item.UnitsInStock
                            @if (item.UnitsInStock > 1)
                            {
                                <text>units in stock</text>
                            }
                            else
                            {
                                <text>unit left</text>
                            }
                        </span>
                    </div>
                    <span>  &nbsp;  &nbsp;</span>
                }
            }
        </div>
    }

</div>

